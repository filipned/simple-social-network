<!DOCTYPE html>
<html>
<head>
  <title>@user.username</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <a class="navbar-brand" href="#">Blog</a>
	    </div>

	    <% if session[:user] != nil %>

		    <ul class="nav navbar-nav">
		      <li class="active"><%= link_to "Home " + session[:user], posts_path %></li>
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
		      <li class="active"><%= link_to "Friends", friends_path %></li>
		    </ul>
		     <ul class="nav navbar-nav">
		      <li class="active"><%= link_to "Users ", users_path %></li>
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
		      <li class="active"><%= link_to "Create post", new_post_path %></li>
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
		      <li class="active"><%= link_to "Log out", log_out_path %></li>
		    </ul>
		<% else %>
		 	<ul class="nav navbar-nav navbar-right">
		      <li class="active"><%= link_to "Log in", log_in_view_path %></li>
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
		      <li class="active"><%= link_to "Register", new_user_path %></li>
		    </ul>
		<% end %>
	  </div>
	</nav>

<%= yield %>

</body>
</html>
