
<h1>Post</h1>
<h1> <%= @post.title %> </h1>

<p> <%= @post.body %> </p>

<h5> Creator: <%= @post.user[:username] %> </h5>

<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-default' %>
<%= link_to "Delete", post_path(@post), 
						method: :delete, 
						data: {confirm: "Are you sure you wanna delete this post?"},	
						:class => 'btn btn-danger' %>
<hr>


