<h1>Add comment</h1>
<!-- pogledati advanced form_for -->
<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
		<%= f.label :username %>
		<%= f.text_field(:username, {:class => 'form_control'} )%>
		
	</p>

	<p>
		<%= f.label :body %>
		<%= f.text_area(:body, {:class => 'form_control'} ) %>
	</p>
	<p>
		<%= f.submit({:class => 'btn btn-primary'}) %>
	</p>
<% end %>