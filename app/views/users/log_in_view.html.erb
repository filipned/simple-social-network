<h1>Log in</h1>

<%= form_tag(log_in_path, {:class => "form"}) do %>
<%= session[:user] %>
	<%= label_tag :username, "Username" %>
	<hr>
	<%= text_field_tag :username %>
	<hr>
	<%= label_tag :password, "Password" %>
	<hr>
	<%= password_field_tag :password %>
	<hr>
	<%= submit_tag "Log in", :disable_with => 'Loging in...' %>
<% end -%>
